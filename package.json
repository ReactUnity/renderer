{
  "name": "@reactunity/renderer",
  "version": "0.4.1",
  "description": "React renderer for Unity3D",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "main": "dist/index.js",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./editor": "./dist/editor.js",
    "./test": "./dist/test.js",
    "./ugui": "./dist/ugui.js",
    "./uitoolkit": "./dist/uitoolkit.js"
  },
  "typesVersions": {
    "*": {
      "editor": [
        "./dist/editor.d.ts"
      ],
      "tests": [
        "./dist/tests.d.ts"
      ],
      "ugui": [
        "./dist/ugui.d.ts"
      ],
      "uitoolkit": [
        "./dist/uitoolkit.d.ts"
      ]
    }
  },
  "scripts": {
    "preinstall": "npx only-allow@1.0.0 yarn",
    "build:clean": "rimraf dist",
    "build:base": "tsc",
    "build:editor": "tsc -p tsconfig.editor.json",
    "build:ugui": "tsc -p tsconfig.ugui.json",
    "build:uitoolkit": "tsc -p tsconfig.uitoolkit.json",
    "build": "yarn build:clean && yarn build:base && yarn build:editor && yarn build:ugui && yarn build:uitoolkit",
    "prepare": "yarn build",
    "watch": "tsc --watch",
    "lint": "eslint --ext js,ts,tsx src models",
    "local": "yalc publish --push",
    "pack": "npm pack"
  },
  "author": "Gokhan Kurt <krtgkn@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ReactUnity/renderer"
  },
  "keywords": [
    "react",
    "react-renderer",
    "unity",
    "unity3d"
  ],
  "dependencies": {
    "react-reconciler": "^0.26.2"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.19",
    "@types/react-reconciler": "^0.26.3",
    "@types/styled-components": "5.1.13",
    "@types/webpack-env": "^1.16.2",
    "eslint": "^7.32.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.2"
  }
}
