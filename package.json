{
  "name": "@reactunity/renderer",
  "version": "0.1.4",
  "description": "React renderer for Unity3D",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "main": "dist/index.js",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./editor": "./dist/editor.js",
    "./test": "./dist/test.js",
    "./ugui": "./dist/ugui.js",
    "./uitoolkit": "./dist/uitoolkit.js"
  },
  "typesVersions": {
    "*": {
      "editor": [
        "./dist/editor.d.ts"
      ],
      "tests": [
        "./dist/tests.d.ts"
      ],
      "ugui": [
        "./dist/ugui.d.ts"
      ],
      "uitoolkit": [
        "./dist/uitoolkit.d.ts"
      ]
    }
  },
  "scripts": {
    "preinstall": "npx only-allow@1.0.0 yarn",
    "build": "tsc -d",
    "build:editor": "tsc -d -p tsconfig.editor.json",
    "build:ugui": "tsc -d -p tsconfig.ugui.json",
    "build:uitoolkit": "tsc -d -p tsconfig.uitoolkit.json",
    "build:all": "npm run build:clean && npm run build && npm run build:editor && npm run build:ugui && npm run build:uitoolkit",
    "prepare": "npm run build:all",
    "watch": "tsc -d --watch",
    "build:clean": "rimraf dist",
    "lint": "eslint --ext js,ts,tsx src models",
    "local": "yalc publish --push",
    "pack": "npm pack"
  },
  "author": "Gokhan Kurt <krtgkn@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ReactUnity/renderer"
  },
  "keywords": [
    "react",
    "react-renderer",
    "unity",
    "unity3d"
  ],
  "dependencies": {
    "react-reconciler": "^0.26.2"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@types/webpack-env": "^1.16.2",
    "@types/react": "^17.0.14",
    "@types/react-reconciler": "^0.26.2",
    "@types/styled-components": "5.1.11",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  }
}
