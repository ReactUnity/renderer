{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "allowJs": true,
    "pretty": true,
    "declaration": false,
    "module": "ES2015",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "importHelpers": false,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "target": "ES5",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "lib": [
      "ES2019"
    ]
  },
  "files": [
    "index.ts",
    "tests.ts"
  ]
}
